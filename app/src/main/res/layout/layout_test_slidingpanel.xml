<?xml version="1.0" encoding="utf-8"?>
<com.mrdo.example.appframework.widget.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:fadeColor="@android:color/transparent"
    app:panelHeight="55dp"
    app:shadowHeight="5dp">
    

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0ff" />

    <FrameLayout
        android:id="@+id/panel_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#334455" >
        <include layout="@layout/fragment_playback_controls"/>
    </FrameLayout>

</com.mrdo.example.appframework.widget.slidinguppanel.SlidingUpPanelLayout>